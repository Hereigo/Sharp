@model DotNet8.Models.CalEventVM

<div class="row-crud-page">
    <h4>Create</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Privacy">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Started" class="control-label"></label>
                    
                    <input type="date" asp-for="Started" class="form-control" />

                    <input type="datetime-local" asp-for="Started" class="form-control" />

                    <input type="datetime-local" value="2018-06-12T00:00" class="form-control" />

                    <input type="time" asp-for="Time" class="form-control" min="06:00" max="23:00" />
                    
                    <span asp-validation-for="Started" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EveryXDays" class="control-label"></label>
                    <input asp-for="EveryXDays" class="form-control" />
                    <span asp-validation-for="EveryXDays" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="Repeat"></label>
                    @Html.DropDownListFor(model => model.Repeat, Model.RepeatList, "Select Repeat Period", new { @class = "form-control" })
                    <span asp-validation-for="Repeat" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <br />
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <br />
    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
