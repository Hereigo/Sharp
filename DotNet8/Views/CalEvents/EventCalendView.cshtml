@model IEnumerable<DotNet8.Models.CalEventVM>

<div class="number">
    @Model?.FirstOrDefault()?.DayOfMonth
</div>

<div>&nbsp;</div>

@foreach (var dayItem in Model)
{
    <div class="day-item-line">
        <div>
            @dayItem?.Time
            @dayItem?.Description
        </div>

        <div class="event">
            @if (dayItem?.Id != 0)
            {
                <a asp-action="Edit" asp-route-id="@dayItem?.Id">
                    &copy;
                </a>
            }
            else
            {
                <a asp-action="Create" asp-route-id="@dayItem?.DayOfMonth">
                    <b>+</b>
                    aaaai A A A A A A A A
                </a>
            }
        </div>
    </div>
}
